{
  "rewrites": [
    { "source": "/api/voice-agent", "destination": "/api/voice-agent" },
    { "source": "/api/wake-check", "destination": "/api/wake-check" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/*.py": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type" },
        { "key": "Access-Control-Expose-Headers", "value": "X-Transcript, X-Response, X-Language" }
      ]
    }
  ]
}
